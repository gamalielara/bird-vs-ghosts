{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "baseUrl": "src",
    "paths": {
      "<utils>/*": ["script/utils/*"],
      "<assets>/*": ["assets/*"],
      "<script>/*": ["script/*"],
    }
  }
}